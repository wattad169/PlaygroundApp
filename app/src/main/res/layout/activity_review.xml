<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Review" >

    <RelativeLayout
        android:id="@+id/rl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_reviewtitle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
           >

            <ImageView
                android:id="@+id/img_rev_title"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/title_bg" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/title_activity_review"
                android:textColor="#fff"
                android:textSize="20dp"
                android:typeface="sans" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/add_btn" />
        </RelativeLayout>

        <ListView
            android:id="@+id/list_review"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/rl_reviewtitle"
            android:layout_marginTop="3dp"
            android:divider="@null"
            android:dividerHeight="0dp" >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_infodialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>


</RelativeLayout>